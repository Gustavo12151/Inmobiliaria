@model IEnumerable<Inmobiliaria.Models.Propietario>

<h2>Propietarios</h2>
<a class="btn btn-primary mb-3" asp-action="Create">Nuevo Propietario</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>DNI</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Contacto</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (Propietario p in Model)
    {
        <tr>
            <td>@p.DNI</td>
            <td>@p.Nombre</td>
            <td>@p.Apellido</td>
            <td>@p.Contacto</td>
            <td>
                @if (p.Estado == "Activo")
                {
                    <span class="badge bg-success">Activo</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactivo</span>
                }
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-info btn-sm">Detalles</a>
                <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-warning btn-sm">Editar</a>

                @* Botón dinámico según estado *@
                @if (User.IsInRole("Administrador"))
                {
                    @if (p.Estado == "Activo")
                    {
                        <a asp-action="CambiarEstado" asp-route-id="@p.Id" class="btn btn-danger btn-sm">
                            Dar de Baja
                        </a>
                    }
                    else
                    {
                        <a asp-action="CambiarEstado" asp-route-id="@p.Id" class="btn btn-success btn-sm">
                            Reactivar
                        </a>
                    }
                }
            </td>
        </tr>
    }
    </tbody>
</table>
