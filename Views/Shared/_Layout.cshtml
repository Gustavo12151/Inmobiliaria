@using System.Security.Claims
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inmobiliaria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Inmobiliaria</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Menú">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <!-- Usuarios: solo administrador -->
                            @if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                                </li>
                            }

                            <!-- Propietarios: Admin (gestiona) y Empleado (solo lectura) -->
                            @if (User.IsInRole("Administrador") || User.IsInRole("Empleado"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Propietarios" asp-action="Index">Propietarios</a>
                                </li>
                            }

                            <!-- Tipos de Inmuebles: Admin y Empleado -->
                            @if (User.IsInRole("Administrador") || User.IsInRole("Empleado"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="TiposInmuebles" asp-action="Index">Tipos de Inmuebles</a>
                                </li>
                            }

                            <!-- Inquilinos -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Inquilinos" asp-action="Index">Inquilinos</a>
                            </li>

                            <!-- Inmuebles -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Inmuebles" asp-action="Index">Inmuebles</a>
                            </li>

                            <!-- Contratos -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Contratos" asp-action="Index">Contratos</a>
                            </li>

                            <!-- Pagos -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Pagos" asp-action="Index">Pagos</a>
                            </li>
                        }
                    </ul>

                    <!-- Perfil y Logout -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item d-flex align-items-center">
                                <a class="nav-link d-flex align-items-center" 
                                   asp-controller="Usuarios" 
                                   asp-action="Perfil" 
                                   asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)">
                                    <span class="me-2">@User.Identity.Name</span>
                                    @{
                                        var avatar = User.Claims.FirstOrDefault(c => c.Type == "Avatar")?.Value;
                                        var avatarUrl = !string.IsNullOrEmpty(avatar) ? avatar : Url.Content("~/avatars/default.png");
                                    }
                                    <img src="@avatarUrl" alt="Avatar" class="rounded-circle" width="40" height="40" />
                                </a>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Usuarios" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link">Salir</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Usuarios" asp-action="Login">Ingresar</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted mt-3">
        <div class="container">
            &copy; 2025 - Inmobiliaria
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
