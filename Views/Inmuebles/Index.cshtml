@model IEnumerable<Inmobiliaria.Models.Inmueble>

@{
    ViewData["Title"] = "Listado de Inmuebles";
    bool esAdmin = User.IsInRole("Administrador");
    bool esEmpleado = User.IsInRole("Empleado");
    bool filtroActivo = ViewBag.FiltroActivo ?? false;
}

<h2>Listado de Inmuebles</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card mb-4">
    <div class="card-body">

        @* Bot칩n Nuevo Inmueble (solo autenticados) *@
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-action="Create" class="btn btn-primary mb-3">Nuevo Inmueble</a>
        }

        <form asp-action="NoOcupados" method="post" class="row g-3">
            <div class="col-md-4">
                <label for="inicio" class="form-label">Fecha inicio</label>
                <input type="date" id="inicio" name="inicio" class="form-control"
                       value="@(ViewBag.FechaInicio ?? "")" required>
            </div>
            <div class="col-md-4">
                <label for="fin" class="form-label">Fecha fin</label>
                <input type="date" id="fin" name="fin" class="form-control"
                       value="@(ViewBag.FechaFin ?? "")" required>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">Filtrar no ocupados</button>
                <a asp-action="Index" class="btn btn-secondary">Mostrar todos</a>
            </div>
        </form>
    </div>
</div>

@if (filtroActivo)
{
    <div class="alert alert-info">
        Mostrando inmuebles libres entre <strong>@ViewBag.FechaInicio</strong> y <strong>@ViewBag.FechaFin</strong>
    </div>
}

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Direcci칩n</th>
            <th>Ambientes</th>
            <th>Superficie</th>
            <th>Precio</th>
            <th>Propietario</th>
            <th>Estado Propietario</th>
            <th>Tipo</th>
            <th>Estado Inmueble</th>

            @if (esAdmin || esEmpleado)
            {
                <th>Acciones</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var inmueble in Model)
        {
            <tr>
                <td>@inmueble.Id</td>
                <td>@inmueble.Direccion</td>
                <td>@inmueble.Ambientes</td>
                <td>@inmueble.Superficie</td>
                <td>$@inmueble.Precio.ToString("N2")</td>
                <td>@($"{inmueble.Propietario.Nombre} {inmueble.Propietario.Apellido}")</td>
                <td>
                    @if (inmueble.Propietario.Estado == "Activo")
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactivo</span>
                    }
                </td>
                <td>@inmueble.Tipo.Nombre</td>
                <td>
                    @if (inmueble.Estado == "Disponible")
                    {
                        <span class="badge bg-success">Disponible</span>
                    }
                    else if (inmueble.Estado == "Indisponible")
                    {
                        <span class="badge bg-danger">Indisponible</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@inmueble.Estado</span>
                    }
                </td>

                @if (esAdmin || esEmpleado)
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@inmueble.Id" class="btn btn-warning btn-sm">Editar</a>

                        @* Bot칩n para cambiar estado (solo si propietario activo) *@
                        @if (inmueble.Propietario.Estado == "Activo")
                        {
                            <a asp-action="CambiarEstado" asp-route-id="@inmueble.Id"
                               class="btn btn-sm @(inmueble.Estado == "Disponible" ? "btn-outline-danger" : "btn-outline-success")">
                                @(inmueble.Estado == "Disponible" ? "Marcar Indisponible" : "Marcar Disponible")
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-outline-secondary" disabled
                                    title="El propietario est치 inactivo, no se puede cambiar el estado">
                                Marcar Disponible
                            </button>
                        }

                        @if (esAdmin)
                        {
                            <a asp-action="Delete" asp-route-id="@inmueble.Id" class="btn btn-danger btn-sm">Eliminar</a>
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
