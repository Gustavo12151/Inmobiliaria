@model Inmobiliaria.Models.Inmueble

@{
    ViewData["Title"] = "Crear Inmueble";
}

<h2>Crear Inmueble</h2>

<form asp-action="Create" method="post" class="mt-3">
    <div class="form-group mb-3">
        <label asp-for="Direccion"></label>
        <input asp-for="Direccion" class="form-control"/>
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Ambientes"></label>
        <input asp-for="Ambientes" class="form-control"/>
        <span asp-validation-for="Ambientes" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Superficie"></label>
        <input asp-for="Superficie" class="form-control"/>
        <span asp-validation-for="Superficie" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control"/>
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="IdPropietario"></label>
        <select asp-for="IdPropietario" asp-items="@(ViewBag.Propietarios as SelectList)" class="form-control"></select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="IdTipo"></label>
        <select asp-for="IdTipo" asp-items="@(ViewBag.Tipos as SelectList)" class="form-control"></select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Estado"></label>
        <select asp-for="Estado" class="form-control">
            <option value="Disponible">Disponible</option>
            <option value="Ocupado">Ocupado</option>
        </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
