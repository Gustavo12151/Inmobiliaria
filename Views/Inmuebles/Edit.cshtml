@model Inmobiliaria.Models.Inmueble
@{
    ViewData["Title"] = "Editar Inmueble";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Direcci√≥n</label>
        <input asp-for="Direccion" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Ambientes</label>
        <input asp-for="Ambientes" class="form-control" type="number" />
    </div>
    <div class="mb-3">
        <label class="form-label">Superficie</label>
        <input asp-for="Superficie" class="form-control" type="number" step="0.01" />
    </div>
    <div class="mb-3">
        <label class="form-label">Estado</label>
        <input asp-for="Estado" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Precio</label>
        <input asp-for="Precio" class="form-control" type="number" step="0.01" />
    </div>
    <div class="mb-3">
        <label class="form-label">Propietario (ID)</label>
        <input asp-for="IdPropietario" class="form-control" type="number" />
    </div>
    <div class="mb-3">
        <label class="form-label">Tipo (ID)</label>
        <input asp-for="IdTipo" class="form-control" type="number" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
