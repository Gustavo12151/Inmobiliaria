@model Inmobiliaria.Models.Inmueble

@{
    ViewData["Title"] = "Editar Inmueble";
}

<h2>Editar Inmueble</h2>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Estado" />

    <div class="form-group mb-3">
        <label asp-for="Direccion"></label>
        <input asp-for="Direccion" class="form-control"/>
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Ambientes"></label>
        <input asp-for="Ambientes" class="form-control"/>
        <span asp-validation-for="Ambientes" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Superficie"></label>
        <input asp-for="Superficie" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Superficie" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" type="number" step="0.01">
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="IdPropietario"></label>
        <select asp-for="IdPropietario" asp-items="@(ViewBag.Propietarios as SelectList)" class="form-control"></select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="IdTipo"></label>
        <select asp-for="IdTipo" asp-items="@(ViewBag.Tipos as SelectList)" class="form-control"></select>
    </div>



    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
