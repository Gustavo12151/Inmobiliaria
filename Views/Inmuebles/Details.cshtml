@model Inmobiliaria.Models.Inmueble

@{
    ViewData["Title"] = "Detalle del Inmueble";
}

<h2>Detalle Inmueble</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Direcci√≥n</dt>
            <dd class="col-sm-9">@Model.Direccion</dd>

            <dt class="col-sm-3">Ambientes</dt>
            <dd class="col-sm-9">@Model.Ambientes</dd>

            <dt class="col-sm-3">Superficie</dt>
            <dd class="col-sm-9">@Model.Superficie</dd>

            <dt class="col-sm-3">Precio</dt>
            <dd class="col-sm-9">@Model.Precio.ToString("C")</dd>

            <dt class="col-sm-3">Propietario</dt>
            <dd class="col-sm-9">@($"{Model.Propietario.Nombre} {Model.Propietario.Apellido}")</dd>

            <dt class="col-sm-3">Tipo</dt>
            <dd class="col-sm-9">@Model.Tipo.Nombre</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">@Model.Estado</dd>
        </dl>

        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</div>
