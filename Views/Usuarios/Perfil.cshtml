@model Inmobiliaria.Models.Usuario

<h2>Perfil de Usuario</h2>

<form asp-action="EditarPerfil" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-2">
        <label asp-for="NombreUsuario">Usuario</label>
        <input asp-for="NombreUsuario" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="Rol">Rol</label>
        @if (User.IsInRole("Administrador"))
        {
            <select name="Rol" class="form-control">
                <option value="Empleado" selected="@(Model.Rol=="Empleado")">Empleado</option>
                <option value="Administrador" selected="@(Model.Rol=="Administrador")">Administrador</option>
            </select>
        }
        else
        {
            <input asp-for="Rol" class="form-control" readonly />
        }
    </div>

    <div class="form-group mb-3">
        <label>Avatar</label>
        @if (!string.IsNullOrEmpty(Model.Avatar))
        {
            <div class="mb-2">
                <img src="@Model.Avatar" alt="Avatar" width="100" height="100" class="rounded-circle" />
            </div>
        }
        <input type="file" name="avatarFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

<div class="mt-3">
    
    @if (User.IsInRole("Administrador") || User.Identity!.Name == Model.NombreUsuario)
    {
        <a asp-action="CambiarClave" asp-route-id="@Model.Id" class="btn btn-warning">
            Cambiar Contraseña
        </a>
    }
</div>

<!-- Botón extra para eliminar avatar -->
@if (!string.IsNullOrEmpty(Model.Avatar))
{
    <form asp-action="EliminarAvatar" method="post" class="mt-2">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Eliminar Avatar</button>
    </form>
}
