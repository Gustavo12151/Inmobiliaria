@model Inmobiliaria.Models.Usuario
@{
    ViewData["Title"] = "Mi Perfil";
}

<h2>Mi Perfil</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<!-- FORMULARIO 1: Guardar Cambios (Nombre y Avatar) -->
<form asp-action="EditarPerfil" asp-controller="Usuarios" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="NombreUsuario" class="form-label"></label>
        <input asp-for="NombreUsuario" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Rol</label>
        <input type="text" value="@Model.Rol" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Avatar actual</label>
        @if (!string.IsNullOrEmpty(Model.Avatar))
        {
            <div class="mb-2">
                <img src="@Model.Avatar" alt="Avatar" width="100" height="100" class="rounded-circle border" />
            </div>
        }
        else
        {
            <div class="mb-2">
                <img src="/avatars/default.png" alt="Avatar" width="100" height="100" class="rounded-circle border" />
            </div>
        }
        <input type="file" name="avatarFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>

<!-- FORMULARIO 2: Eliminar Avatar -->
<form asp-action="EliminarAvatar" asp-controller="Usuarios" method="post" class="mt-2">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Eliminar Avatar</button>
</form>

<!-- FORMULARIO 3: Cambiar Contraseña -->
<form asp-action="CambiarClave" asp-controller="Usuarios" method="get" class="mt-2">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-warning">Cambiar Contraseña</button>
</form>
