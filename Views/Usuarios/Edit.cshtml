@model Inmobiliaria.Models.Usuario

<h2>Editar Usuario</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-2">
        <label asp-for="NombreUsuario">Usuario</label>
        <input asp-for="NombreUsuario" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Clave">Clave</label>
        <input asp-for="Clave" type="password" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Rol">Rol</label>
        <input asp-for="Rol" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Avatar">Avatar (URL)</label>
        <input asp-for="Avatar" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
