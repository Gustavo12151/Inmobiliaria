@model Inmobiliaria.Models.Usuario

@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<h2>Cambiar Contraseña</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="CambiarClave" asp-controller="Usuarios" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Contraseña Actual</label>
        <input type="password" name="claveActual" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Nueva Contraseña</label>
        <input type="password" name="nuevaClave" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Actualizar Contraseña</button>
    <a asp-action="Perfil" asp-route-id="@Model.Id" class="btn btn-secondary">Volver al Perfil</a>
</form>
