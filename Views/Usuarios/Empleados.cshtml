@model IEnumerable<Inmobiliaria.Models.Usuario>
@{
    ViewData["Title"] = "Gesti√≥n de Empleados";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Rol</th>
            <th>Avatar</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.NombreUsuario</td>
            <td>@u.Rol</td>
            <td>
                @if (!string.IsNullOrEmpty(u.Avatar))
                {
                    <img src="@u.Avatar" width="50" class="img-thumbnail" />
                }
                else
                {
                    <span class="text-muted">Sin avatar</span>
                }
            </td>
            <td>
                <a asp-action="PerfilEmpleado" asp-route-id="@u.Id" class="btn btn-info btn-sm">Ver perfil</a>
            </td>
        </tr>
    }
    </tbody>
</table>
