@model Inmobiliaria.Models.Usuario

<h2>Nuevo Usuario</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-2">
        <label asp-for="NombreUsuario">Usuario</label>
        <input asp-for="NombreUsuario" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Clave">Clave</label>
        <input asp-for="Clave" type="password" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Rol">Rol</label>
        <select asp-for="Rol" class="form-control" asp-items="ViewBag.Roles">
            <option value="">-- Seleccione un rol --</option>
        </select>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Avatar">Avatar (URL)</label>
        <input asp-for="Avatar" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
