@model Inmobiliaria.Models.Usuario

@{
    ViewData["Title"] = "Editar Empleado";
}

<h2>Editar Empleado</h2>

<form asp-action="EditEmpleado" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="NombreUsuario" class="form-label"></label>
        <input asp-for="NombreUsuario" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Rol</label>
        <select asp-for="Rol" class="form-control">
            <option value="Empleado" selected="@(Model.Rol=="Empleado")">Empleado</option>
            <option value="Administrador" selected="@(Model.Rol=="Administrador")">Administrador</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Nueva Contraseña</label>
        <input type="password" name="nuevaClave" class="form-control" placeholder="Dejar vacío para no cambiar" />
    </div>

    <div class="mb-3">
        <label class="form-label">Avatar actual</label><br />
        @if (!string.IsNullOrEmpty(Model.Avatar))
        {
            <img src="@Model.Avatar" alt="Avatar" width="100" height="100" class="rounded-circle" />
        }
        else
        {
            <img src="~/avatars/default.png" alt="Avatar" width="100" height="100" class="rounded-circle" />
        }
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
