@model IEnumerable<Inmobiliaria.Models.Pago>

@{
    ViewData["Title"] = "Lista de Pagos";
    bool esAdmin = User.IsInRole("Administrador");
    bool esEmpleado = User.IsInRole("Empleado");
}

<h2>Lista de Pagos</h2>
<hr />

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">
        @TempData["Mensaje"]
    </div>
}

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Contrato</th>
            <th>Numero Pago</th>
            <th>Fecha Pago</th>
            <th>Importe</th>
            @if (esAdmin)
            {
                <th>Usuario Creador</th>
                <th>Usuario Anulador</th>
            }
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pago in Model)
        {
            <tr>
                <td>@pago.Id</td>
                <td>@($"Contrato {pago.ContratoId} ({pago.Contrato?.FechaInicio:dd/MM/yyyy} - {pago.Contrato?.FechaFin:dd/MM/yyyy})")</td>
                <td>@pago.NumeroPago</td>
                <td>@pago.FechaPago.ToString("dd/MM/yyyy")</td>
                <td>$@pago.Importe.ToString("N2")</td>

                @if (esAdmin)
                {
                    <td>@pago.UsuarioCreador</td>
                    <td>
                        @if (pago.UsuarioAnulador != null)
                        {
                            @pago.UsuarioAnulador
                        }
                        else
                        {
                            <span class="text-muted">No anulado</span>
                        }
                    </td>
                }

                <td>
                    @* Botón Ver solo para admin *@
                    @if (esAdmin)
                    {
                        <a asp-action="Details" asp-route-id="@pago.Id" class="btn btn-info btn-sm">Ver</a>
                        <a asp-action="Edit" asp-route-id="@pago.Id" class="btn btn-warning btn-sm">Editar</a>
                    }
                    @* Empleado solo puede editar Concepto *@
                    @if (esEmpleado)
                    {
                        <a asp-action="Edit" asp-route-id="@pago.Id" class="btn btn-warning btn-sm">Editar Concepto</a>
                    }

                    @* Anular: admin y empleado si quieres *@
                    @if (esAdmin || esEmpleado)
                    {
                        <form asp-action="Delete" asp-route-id="@pago.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm" 
                                    onclick="return confirm('¿Seguro que desea anular este pago?');">
                                Anular
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Nuevo Pago</a>
