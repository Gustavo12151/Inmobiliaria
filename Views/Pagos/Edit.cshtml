@model Inmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Editar Pago";
}

<h2>Editar Pago</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group">
        <label asp-for="ContratoId"></label>
        @if (User.IsInRole("Administrador"))
        {
            <input asp-for="ContratoId" class="form-control" />
        }
        else
        {
            <input asp-for="ContratoId" class="form-control" readonly />
        }
    </div>

    <div class="form-group">
        <label asp-for="FechaPago"></label>
        @if (User.IsInRole("Administrador"))
        {
            <input asp-for="FechaPago" type="date" class="form-control" />
        }
        else
        {
            <input asp-for="FechaPago" type="date" class="form-control" readonly />
        }
    </div>

    <div class="form-group">
        <label asp-for="Importe"></label>
        @if (User.IsInRole("Administrador"))
        {
            <input asp-for="Importe" class="form-control" />
        }
        else
        {
            <input asp-for="Importe" class="form-control" readonly />
        }
    </div>

    <div class="form-group">
        <label asp-for="Concepto"></label>
        <input asp-for="Concepto" class="form-control" />  <!-- Todos pueden editar Concepto -->
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" asp-route-contratoId="@Model.ContratoId" class="btn btn-secondary">Cancelar</a>
</form>
