@model List<Inmobiliaria.Models.Contrato>
@{
    ViewData["Title"] = "Contratos";
}

<h2>Contratos</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<p>
    <a class="btn btn-primary" asp-action="Create">Crear Contrato</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Inquilino</th>
            <th>Inmueble</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Monto Mensual</th>
            <th>Usuario Creador</th>
            <th>Usuario Terminador</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Inquilino.Nombre @item.Inquilino.Apellido</td>
                <td>@item.Inmueble.Direccion</td>
                <td>@item.FechaInicio.ToShortDateString()</td>
                <td>@item.FechaFin.ToShortDateString()</td>
                <td>@item.MontoMensual</td>
                <td>@item.UsuarioCreador</td>
                <td>@item.UsuarioTerminador</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
