@model IEnumerable<Inmobiliaria.Models.Contrato>

@{
    ViewData["Title"] = "Lista de Contratos";
}

<h2>Lista de Contratos</h2>
<hr />

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">
        @TempData["Mensaje"]
    </div>
}

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Inquilino</th>
            <th>Inmueble</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Monto Mensual</th>
            <th>Usuario Creador</th>
            <th>Usuario Finalizador</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contrato in Model)
        {
            <tr>
                <td>@contrato.Id</td>
                <td>@contrato.Inquilino?.Nombre</td>
                <td>@contrato.Inmueble?.Direccion</td>
                <td>@contrato.FechaInicio.ToString("dd/MM/yyyy")</td>
                <td>@contrato.FechaFin.ToString("dd/MM/yyyy")</td>
                <td>$ @contrato.MontoMensual.ToString("N2")</td>
                <td>@contrato.UsuarioCreador?.NombreUsuario</td>
                <td>
                    @if (contrato.UsuarioFinalizador != null)
                    {
                        @contrato.UsuarioFinalizador.NombreUsuario
                    }
                    else
                    {
                        <span class="text-muted">No finalizado</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@contrato.Id" class="btn btn-info btn-sm">Ver</a>
                    <a asp-action="Edit" asp-route-id="@contrato.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@contrato.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Nuevo Contrato</a>
