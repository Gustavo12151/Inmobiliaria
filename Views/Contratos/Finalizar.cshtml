@model Inmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Finalizar Contrato";
}

<h2>Finalizar Contrato</h2>
<hr />

<form asp-action="Finalizar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Inquilino</label>
        <input class="form-control" value="@Model.Inquilino.Nombre @Model.Inquilino.Apellido" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Inmueble</label>
        <input class="form-control" value="@Model.Inmueble.Direccion" readonly />
    </div>

    <p class="alert alert-warning">
        ¿Está seguro que desea <strong>finalizar</strong> este contrato?
    </p>

    <button type="submit" class="btn btn-danger">Finalizar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
