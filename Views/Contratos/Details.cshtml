@model Inmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Detalles del Contrato";
}

<h2>Detalles del Contrato</h2>
<hr />

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Contrato NÂº @Model.Id</h5>

        <dl class="row">
            <dt class="col-sm-3">Inquilino</dt>
            <dd class="col-sm-9">@Model.Inquilino?.Nombre</dd>

            <dt class="col-sm-3">Inmueble</dt>
            <dd class="col-sm-9">@Model.Inmueble?.Direccion</dd>

            <dt class="col-sm-3">Fecha Inicio</dt>
            <dd class="col-sm-9">@Model.FechaInicio.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Fecha Fin</dt>
            <dd class="col-sm-9">@Model.FechaFin.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Monto Mensual</dt>
            <dd class="col-sm-9">$ @Model.MontoMensual.ToString("N2")</dd>

            <dt class="col-sm-3">Usuario Creador</dt>
            <dd class="col-sm-9">@Model.UsuarioCreador?.NombreUsuario</dd>

            <dt class="col-sm-3">Usuario Finalizador</dt>
            <dd class="col-sm-9">
                @if (Model.UsuarioFinalizador != null)
                {
                    @Model.UsuarioFinalizador.NombreUsuario
                }
                else
                {
                    <span class="text-muted">No finalizado</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
