@{
    ViewData["Title"] = "Inicio";
}

<div class="container mt-4">
    <h2>Bienvenido, @User.Identity!.Name!</h2>

    <!-- ALERTS de mensajes -->
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }

    <div class="row mt-4">

        <!-- Usuarios: solo administrador -->
       @if (User.IsInRole("Administrador") || User.IsInRole("Empleado"))
{
    <div class="col-md-3 mb-4">
        <a href="@Url.Action("Index", "Propietarios")" class="text-decoration-none">
            <div class="card text-white bg-primary h-100 shadow-sm">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <h5 class="card-title">Propietarios</h5>
                    <p class="card-text">
                        @(User.IsInRole("Administrador") 
                            ? "Administrar propietarios" 
                            : "Ver propietarios")
                    </p>
                </div>
            </div>
        </a>
    </div>
}


        <!-- Tipos de Inmuebles: Administrador y Empleado -->
        @if (User.IsInRole("Administrador") || User.IsInRole("Empleado"))
        {
            <div class="col-md-3 mb-4">
                <a href="@Url.Action("Index", "TiposInmuebles")" class="text-decoration-none">
                    <div class="card text-white bg-secondary h-100 shadow-sm">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center">
                            <h5 class="card-title">Tipos de Inmuebles</h5>
                            <p class="card-text">Administrar categorías</p>
                        </div>
                    </div>
                </a>
            </div>
        }

        <!-- Inquilinos -->
        <div class="col-md-3 mb-4">
            <a href="@Url.Action("Index", "Inquilinos")" class="text-decoration-none">
                <div class="card text-white bg-success h-100 shadow-sm">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <h5 class="card-title">Inquilinos</h5>
                        <p class="card-text">Administrar inquilinos</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Inmuebles -->
        <div class="col-md-3 mb-4">
            <a href="@Url.Action("Index", "Inmuebles")" class="text-decoration-none">
                <div class="card text-dark bg-warning h-100 shadow-sm">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <h5 class="card-title">Inmuebles</h5>
                        <p class="card-text">Administrar inmuebles</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Contratos -->
        <div class="col-md-3 mb-4">
            <a href="@Url.Action("Index", "Contratos")" class="text-decoration-none">
                <div class="card text-white bg-danger h-100 shadow-sm">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <h5 class="card-title">Contratos</h5>
                        <p class="card-text">Administrar contratos</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Pagos -->
        <div class="col-md-3 mb-4">
            <a href="@Url.Action("Index", "Pagos")" class="text-decoration-none">
                <div class="card text-white bg-info h-100 shadow-sm">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <h5 class="card-title">Pagos</h5>
                        <p class="card-text">Administrar pagos</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
