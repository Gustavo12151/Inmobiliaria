@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-4">Bienvenido, @User.Identity.Name</h2>
    <div class="row g-4">

        <!-- Propietarios -->
        <div class="col-md-3">
            <a asp-controller="Propietarios" asp-action="Index" class="text-decoration-none">
                <div class="card text-white bg-primary h-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <h3 class="card-title">Propietarios</h3>
                        <p class="card-text">Ver y administrar Propietarios</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Inquilinos -->
        <div class="col-md-3">
            <a asp-controller="Inquilinos" asp-action="Index" class="text-decoration-none">
                <div class="card text-white bg-success h-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <h3 class="card-title">Inquilinos</h3>
                        <p class="card-text">Ver y administrar Inquilinos</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Inmuebles -->
        <div class="col-md-3">
            <a asp-controller="Inmuebles" asp-action="Index" class="text-decoration-none">
                <div class="card text-white bg-warning h-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <h3 class="card-title">Inmuebles</h3>
                        <p class="card-text">Ver y administrar Inmuebles</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Contratos -->
        <div class="col-md-3">
            <a asp-controller="Contratos" asp-action="Index" class="text-decoration-none">
                <div class="card text-white bg-danger h-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <h3 class="card-title">Contratos</h3>
                        <p class="card-text">Ver y administrar Contratos</p>
                    </div>
                </div>
            </a>
        </div>

    </div>
</div>
